<% const success = req.flash('success'); if (success.length > 0) { %>
<div class="c-toasts">
  <div
    class="toast align-items-center bg-success text-light"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
  >
    <div class="toast-header">
      <%= success%>
      <button
        type="button"
        class="ml-2 mb-1 close"
        data-dismiss="toast"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
</div>
<% } %>
