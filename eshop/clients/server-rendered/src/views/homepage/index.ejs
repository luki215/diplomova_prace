<!-- prettier-ignore -->
<%- include('../layouts/head', {seo, siteInfo}); %> 
<%- include('../shared/teaser', 
{ title:'Nakupujte květiny z pohodlí svého domova' ,
  image: environment.api + '/images/hp_teaser.webp',
  css_class: 'mb-4'
}
); %>

<div class="container">
  <% homepage.campaigns.forEach(campaign => { %>
  <div class="row">
    <div class="col">
      <h2 class="mb-3"><%= campaign.title %></h2>
      <div class="row">
        <% campaign.products.forEach(product => { %>
        <!-- prettier-ignore -->
        <%- include('../shared/product-card', { product, css_class: "d-flex col-12 col-sm-6 col-lg-3 mb-4" }); %>
        <% }) %>
      </div>
    </div>
  </div>
  <% }) %>
</div>
<%- include('../layouts/foot'); %>
